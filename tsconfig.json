{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@data/*": ["./data/*"],
      "@utils/*": ["./utils/*"],
      "@styles/*": ["./styles/*"],
      "@config/*": ["./config/*"],
      "@components/*": ["./components/*"],
      "@interfaces": ["./interfaces/index"],
      "@coreStyles": ["./styles/coreStyles"],
      "@componentLib/*": ["./components/lib/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "twin.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "config/withTwin.js"  ],
  "exclude": ["node_modules"]
}
